<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.connor.cabshare.requesterWaiting"
    android:id="@+id/R">

    <TextView
        android:text="dsf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awaitingText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to offers"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="153dp"
        android:onClick="backToOffers" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your request was declined"
        android:id="@+id/declinedTextView"
        android:layout_above="@+id/backButton"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your request was accepted!"
        android:id="@+id/acceptedTextView"
        android:layout_below="@+id/awaitingText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="90dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go to Offer"
        android:id="@+id/offerButton"
        android:layout_below="@+id/acceptedTextView"
        android:layout_centerHorizontal="true"
        android:onClick="goToOfferMenu" />

</RelativeLayout>
